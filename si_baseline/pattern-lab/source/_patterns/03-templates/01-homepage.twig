{% extends "templates-page-1col" %}
{% block preface_right %}
    {% if alert %}
        <div class="l-region--header-preface-left">
            {% include "components-alert" with alert %}
        </div>

    {% endif %}
{% endblock %}

{% block hero %}

    {% if slider %}
        {% include "components-slideshow" %}
    {% endif %}

    <div class="g g-3up">
        {% for tout in touts %}
            <div class="gi">
                {% include "components-block-inset" %}
            </div>
        {% endfor %}
    </div><!--end 3up-->

{% endblock %}

{% block main %}
    <section class="section latest-posts">
        <h2 class="section-title">Latest Posts</h2>
        <ul class="post-list">
            {% for post in latest_posts %}
                <li>{% include "components-media-block" %}</li>
            {% endfor %}
        </ul>
        <a href="#" class="text-btn">View more posts</a>
    </section>
{% endblock %}

{% block sidebar %}
    {% include "regions-recent-tweets" %}
{% endblock %}
